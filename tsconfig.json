{
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react",

    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitThis": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true,

    "sourceMap": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*.spec.tsx",
    "**/*.spec.jsx"
  ]
}
