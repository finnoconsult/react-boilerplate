<!DOCTYPE html>
<html lang="en">
  <head>
    <% const __ = require('./app/helpers/i18n') %>
    <% const navBar = require('./app/plugin/navigation/keywords.ejs') %>
    <% const footer = require('./app/plugin/navigation/footer.ejs') %>

    <script>
      var gaConfig= {};
    </script>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <title><%= htmlWebpackPlugin.options.title%></title>
    <!-- <meta name="viewport" content="initial-scale=1.0"> -->
    <meta name="viewport" content="user-scalable=yes, initial-scale=1, minimal-ui">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="<%= htmlWebpackPlugin.options.name%>">
    <meta name="apple-mobile-web-app-title" content="<%= htmlWebpackPlugin.options.name%>">
    <meta name="theme-color" content="#ffffff">
    <meta name="msapplication-navbutton-color" content="#ffffff">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="msapplication-starturl" content="index.html">
    <link rel="stylesheet" href="./reset.css" />
    <link rel="shortcut icon" href="./images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="./images/favicon.ico" type="image/x-icon">
    <link rel="manifest" href="./manifest.json">
    <meta name="msapplication-config" content="./browserconfig.xml" />

    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />

    <!-- <link rel="stylesheet" href="./reset.css" /> -->
    <link rel="stylesheet" href="./app.css" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>

  </head>
  <body>
    <!-- Remains visible in DOM even after React code injest  -->
    <%= navBar({ id: 'keywords', application: htmlWebpackPlugin.options.application })%>
    <div id='root'>
      <style>
        h1 {
          font-size: 10vh;
          font-weight: bold;
          animation: 0.5s linear infinite condemned_blink_effect;
          -webkit-animation: 0.5s linear infinite condemned_blink_effect; // for android
        }
        @keyframes condemned_blink_effect {
            0% {
                visibility: visible;
            }
            50% {
                visibility: hidden;
            }
            100% {
                visibility: hidden;
            }
        }
        @-webkit-keyframes condemned_blink_effect { // for android
            0% {
                visibility: visible;
            }
            50% {
                visibility: hidden;
            }
            100% {
                visibility: hidden;
            }
        }
        h2 {
          font-size: 5vh;
        }
      </style>
      <h1><%= __('The page is being loaded...')%></h1>
      <h2><%= __('This DOM part is being by React-Dom.\n'
                +'The reference for this div#root id is in index.js')%></p>
    </div>
    <%= footer()%>
  </body>
</html>
